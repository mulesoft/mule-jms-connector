    <munit:config name="manual-ack"/>

    <munit:before-suite name="beforeTest-manual-ack-test-case" description="before suite">
        <set-variable variableName="brokerName" value="localhost"/>
        <set-variable variableName="destinationName" value="DEV.QUEUE.consumerIsKeptOpenUntilMessageIsAcknowledged"/>
        <flow-ref name="deleteQueue"/>
    </munit:before-suite >

    <munit:test name="consumerIsKeptOpenUntilMessageIsAcknowledged" >
        <munit:behavior>
            <set-variable variableName="numberOfMessages" value="#[5]" />
            <set-variable variableName="message" value="The ducks in St James's Park are so used to being fed bread by secret agents meeting clandestinely that they have developed their own Pavlovian reaction." />
        </munit:behavior>
        <munit:execution>
            <foreach collection="#[1 to vars.numberOfMessages]">
                <jms:publish config-ref="config" destination="DEV.QUEUE.consumerIsKeptOpenUntilMessageIsAcknowledged">
                    <jms:message>
                        <jms:body>#[vars.message]
                        </jms:body>
                    </jms:message>
                </jms:publish>
            </foreach>
        </munit:execution>
        <munit:validation>
            <parallel-foreach collection="#[1 to vars.numberOfMessages]">
                <jms:consume config-ref="config" destination="DEV.QUEUE.consumerIsKeptOpenUntilMessageIsAcknowledged" ackMode="MANUAL" maximumWait="30000" >
                    <reconnect-forever />
                    <jms:consumer-type >
                        <jms:queue-consumer />
                    </jms:consumer-type>
                </jms:consume>
                <munit-tools:sleep time="#[output application/java --- randomInt(1000)]"/>
<!--                <jms:ack ackId="#[attributes.ackId]"/>-->
                <logger level="INFO" message="Message ACKed!" />
                <munit-tools:assert-that expression="#[payload]" is="#[MunitTools::equalTo(vars.message)]"/>
            </parallel-foreach>
        </munit:validation>
    </munit:test>

